local _ROUTINES = {}
local _CURRENTROUTINE = nil
local _LASTID = 0
local _PRIORITYQUEUE = {}

local function niceError( _err )
  term.clear()
  term.setCursorPos(1, 1)
  term.setCursorBlink(false)
  print( tostring(_err).."\nPress any key to shutdown" )
  os.pullEvent("key")
  error()
end

local function safePairs( _t )
  local tKeys = {}
  for k,v in pairs( _t ) do
    table.insert(tKeys, k)
  end
  local nAt = 0
  return function()
    nAt = nAt + 1
    return tKeys[nAt], _t[tKeys[nAt]]
  end
end

local function nextId()
  local temp = _LASTID
  _LASTID = _LASTID + 1
  return temp
end

local function create( _name, _func, _callback )
  if type(_func) == "function" then
    local id = nextId()
    _ROUTINES[id] = { id = id, name = _name, callback = _callback, thread = coroutine.create(_func) }
    return id
  end

  return nil
end

local function resume( co, ... )
  local ok, param = coroutine.resume( co.thread, ... )
  if not ok then
    niceError( param )
  end
  if coroutine.status( co.thread ) == "dead" then
    _ROUTINES[ co.id ] = nil
    _CURRENTROUTINE = nil
  end
  return true
end

local function kill( _id )
  if _ROUTINES[_id] and coroutine.status(_ROUTINES[_id]) ~= "dead" then
    _ROUTINES[_id] = nil
    return true
  end
  return false
end

local function stop( _id )
  local co = _ROUTINES[_id]
  if co and coroutine.status( co ) ~= "dead" then
    if co._callback then
      co._callback()
    else
      resume( co, "SIG_KILL" )
    end
    return kill( _id )
  end
  return false
end

function queueTargetedEvent( _id, ... )
  local co = _ROUTINES[_id]

  if not co then
    error( "Invalid routine id.", 2 )
  elseif coroutine.status( co ) == "dead" then
    error( "Routine is dead.", 2 )
  end
  
  os.queueEvent( "targeted_event_".._id, ... )
  return true
end

function queuePriorityTargetdEvent( _id, ... )
  local co = _ROUTINES[_id]

  if not co then
    error( "Invalid routine id.", 2 )
  elseif coroutine.status( co ) == "dead" then
    error( "Routine is dead.", 2 )
  end

  table.insert( _PRIORITYQUEUE, {id = _id, data = {...}} )
end

function newRoutine( _name, _func, _callback )
  return create( _name, _func, _callback )
end

function killRoutine( _id )
  return kill( _id )
end

function stopRoutine( _id )
  return stop( _id )
end

function getRoutine( _id )
  local co = _ROUTINES[ _id or _CURRENTROUTINE ]
  return (co and co.thread or nil)
end

function runRoutines()
  local eventData = {}

  while true do
    for id, routine in safePairs( _ROUTINES ) do
      if eventData[1] == "targeted_event_"..routine.id or not (eventData[1]:find("targeted_event_")) then
        _CURRENTROUTINE = id
        table.remove( eventData, 1 )
        resume( routine, unpack(eventData) )
        break
      end
    end
    while _PRIORITYQUEUE[1] do
      local evt = _PRIORITYQUEUE[1]
      _CURRENTROUTINE = evt.id
      resume( _ROUTINES[evt.id], unpack(evt.data) )
      table.remove( _PRIORITYQUEUE, 1 )
    end
    eventData = { os.pullEventRaw() }
  end
end